<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="message_wizard_form" model="ir.ui.view">
    <field name="name">message.wizard.form</field>
    <field name="model">message.wizard</field>
    <field name="arch" type="xml">
            <form string="Message Wizard">
                <p class="text-center">
                    <field name="message"/>
                </p>
            <footer>
                <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
            </footer>
            </form>
        </field>
    </record>

    <record id="eta_api_form" model="ir.ui.view">
        <field name="name">eta.api.form</field>
        <field name="model">eta.api</field>
        <!--            <field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="arch" type="xml">
            <form string="ETA API">
                <header>
                    <button name="connect_eta_api" type="object" class="oe_stat_button" string="Connect to ETA" />
                    <button name="get_eta_document_types" type="object" class="oe_stat_button" string="Get Eta Document Types" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>

                        <group>
                            <field name="client_id" />
                        </group>
                        <group>
                            <field name="client_secret" />
                        </group>
                        <group>
                            <field name="access_token"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eta_api_tree" model="ir.ui.view">
        <field name="name">eta.api.tree</field>
        <field name="model">eta.api</field>
        <!--            <field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="arch" type="xml">
            <tree string="ETA API">

                <field name="name" />
                <field name="client_id" />
                <field name="client_secret" />

            </tree>
        </field>
    </record>
    <record id="eta_api_search" model="ir.ui.view">
        <field name="name">eta.api.search</field>
        <field name="model">eta.api</field>
        <!--            <field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="arch" type="xml">
            <search string="ETA API">

                <field name="name" />

            </search>
        </field>
    </record>

    <record id="ir_eta_act_window" model="ir.actions.act_window">
        <field name="name">ETA APi</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eta.api</field>
        <field name="view_mode">tree,form</field>
        <!--            <field name="view_id" ref="sequence_view_tree"/>-->
        <!--            <field name="context">{'active_test': False}</field>-->
    </record>

    <!--        <menuitem  id="menu_ir_eta_form" name="ETA API" />-->
    <!--        <menuitem action="ir_eta_act_window" id="menu_eta_sequence_act" parent="menu_ir_eta_form"/>-->


    <!-- Document Types-->
     <record id="eta_document_types_form" model="ir.ui.view">
        <field name="name">eta.document.types.form</field>
        <field name="model">eta.document.types</field>
        <!--            <field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="arch" type="xml">
            <form string="ETA Document Types">


                <field name="eta_id" />
                <field name="name" />
                <field name="description" />
                <field name="activeFrom" />
                <field name="activeTo" />

            </form>
        </field>
    </record>
    <record id="eta_document_types_tree" model="ir.ui.view">
        <field name="name">eta.document.types.tree</field>
        <field name="model">eta.document.types</field>
        <!--            <field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="arch" type="xml">
            <tree string="ETA Document Types">


                <field name="eta_id" />
                <field name="name" />
                <field name="description" />
                <field name="activeFrom" />
                <field name="activeTo" />

            </tree>
        </field>
    </record>

    <record id="ir_eta_document_act_window" model="ir.actions.act_window">
        <field name="name">ETA Document Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eta.document.types</field>
        <field name="view_mode">tree,form</field>
        <!--            <field name="view_id" ref="sequence_view_tree"/>-->
        <!--            <field name="context">{'active_test': False}</field>-->
    </record>

    <!-- Document Type Versions -->
    <record id="eta_document_type_versions_form" model="ir.ui.view">
        <field name="name">eta.document.types.version.form</field>
        <field name="model">eta.document.versions</field>
        <!--            <field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="arch" type="xml">
            <form string="ETA Document Types" >
<!--                <header>-->
<!--                    <button name="get_eta_document_types" type="object" class="oe_link" string="Get Eta Document Types" />-->
<!--                </header>-->

                <field name="version_id" />
                <field name="typeName" />
                <field name="name" />
                <field name="description" />
                <field name="version_number" />
                <field name="status" />
                <field name="activeFrom" />
                <field name="activeTo" />
                <field name="document_type" />

            </form>
        </field>
    </record>
    <record id="eta_document_type_versions_tree" model="ir.ui.view">
        <field name="name">eta.document.types.version.tree</field>
        <field name="model">eta.document.versions</field>
        <!--            <field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="arch" type="xml">
            <tree string="ETA Document Types" >
<!--                <header>-->
<!--                    <button name="get_eta_document_types" type="object" class="oe_link" string="Get Eta Document Types" />-->
<!--                </header>-->

                <field name="version_id" />
                <field name="typeName" />
                <field name="name" />
                <field name="description" />
                <field name="version_number" />
                <field name="status" />
                <field name="activeFrom" />
                <field name="activeTo" />
                <field name="document_type" />

            </tree>
        </field>
    </record>

    <record id="ir_eta_document_version_act_window" model="ir.actions.act_window">
        <field name="name">ETA Document Type Version</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eta.document.versions</field>
        <field name="view_mode">tree,form</field>
        <!--            <field name="view_id" ref="sequence_view_tree"/>-->
        <!--            <field name="context">{'active_test': False}</field>-->
    </record>

    <!-- invoice add eta api fields -->
    <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.more.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_draft']" position="after">
                    <button name="create_eta_invoice" type="object" class="oe_stat_button" string="Create ETA Invoice" />
                    <button name="create_eta_invoice_credit" type="object" class="oe_stat_button" string="Create ETA Credit Note" />
                </xpath>
                <xpath expr="//page[@id='other_tab_entry']" position="after">
                     <page id="eta_api_fields" string="ETA API FIELDS" name="eta_api">
                                <group id="eta_api_entry_group">
                                    <group>
                                        <field name="eta_api" />
                                    </group>
                                    <group name="eta_api_group">
                                       <field name="document_type"/>
                                    </group>
                                    <group>
                                        <field name="document_version" />
                                    </group>
                                    <group>
                                        <field name="uuid" />
                                    </group>
                                    <group>
                                        <field name="longId" />
                                    </group>
                                    <group>
                                        <field name="internalId" />
                                    </group>
                                </group>
                            </page>
                </xpath>
            </field>
        </record>
    <!-- top level menu: no parent -->



    <menuitem id="main_eta_menu" name="ETA Setup"/>

    <!-- A first level in the left side menu is needed
    before using action= attribute -->

    <menuitem id="eta_menu" name="ETA Connection"

              parent="main_eta_menu"/>
    <menuitem id="eta_document_types" name="ETA Document Types"

              parent="main_eta_menu"/>
    <menuitem id="eta_document_type_version" name="ETA Document Type Version"

              parent="main_eta_menu"/>

    <!-- the following menuitem should appear *after*
    its parent openacademy_menu and *after* its
    action course_list_action -->

    <menuitem id="eta_api_menu" name="ETA Connection" parent="eta_menu"

              action="ir_eta_act_window"/>
    <menuitem id="eta_document_menu" name="Document Types" parent="eta_document_types"

              action="ir_eta_document_act_window"/>

    <menuitem id="eta_version_menu" name="Document Type Version" parent="eta_document_type_version"

              action="ir_eta_document_version_act_window"/>

    <!-- Full id location:
    action="openacademy.course_list_action"
    It is not required when it is the same module -->



</odoo>
